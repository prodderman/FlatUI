@import '~global/vars.styl';

.p-profile
  align-items: stretch

  &__profile
    flex-direction: column
    justify-content: flex-start
    align-items: stretch

  &__left-column
    display: flex;
    flex: 0 0 230px;

  &__right-column
    align-items: stretch

  &__profile-row
    flex 0 0 auto

  &__labeled
    flex: 1 1 auto
      
  &__label
    flex: 0 1 30%
  
  &__edit
    width: 100%
  
  &__photo
    margin-bottom: 1rem
@import '~global/vars.styl';

.arrow
  position: relative
  display block
  font-size: 42px
  width 50px
  height 50px
  border-radius: 50%
  border: 3px solid $c_green
  background-color: white
  color: $c_green
  text-align: center
  font-weight: bold

  &:before
  &:after
    content: ""
    position: absolute
    width: 17px
    height 4px
    background-color: $c_green
    left: 35%
    bottom: 0
    margin: auto

  &:before
    top: -2px
    transform-origin: left
    transform: rotate(45deg)

  &:after
    top: 2px
    transform-origin: left
    transform: rotate(-45deg)

  &:hover
    background-color: $c_green

    &:before
    &:after
      background-color: white

  &--right

    &:before
    &:after
      left: 32%
      transform-origin: right

    &:before
      top: 2px

    &:after
      top: -2px


  &--fill
    background-color: $c_green

    &:before
    &:after
      background-color: white

span.arrow.arrow--disabled
  background-color: $c_lightgray
  border-color: $c_lightgray

  &:before
  &:after
    background-color: white
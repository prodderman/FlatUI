include ../input/input
include ../button/button
include ../textarea/textarea

mixin feedback-form({ method = 'POST', action = '', enctype } = {})
  form.feedback-form.js-feedback-form(
    data-parsley-validate
    method= method
    action= action
    enctype= enctype
  )
    .feedback-form__input
      +input({
        name: 'name',
        placeholder: 'Your Name',
        required: true,
      })
    
    .feedback-form__input
      +input({
        name: 'email',
        type: 'email',
        placeholder: 'Your Email',
        pattern: /^(([^<>()\[\]\\.,;:\s@']+(\.[^<>()\[\]\\.,;:\s@']+)*)|('.+'))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.toString(),
        required: true,
      })

    .feedback-form__textarea
      +textarea({
        name: 'message',
        placeholder: 'Your Message',
        required: true,
      })(data-parsley-errors-messages-disabled)
    .feedback-form__button
      +button({ submit: true, text: 'Submit', background: 'filled' })
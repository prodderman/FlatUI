mixin layout()
  .page.js-page
    block

mixin layout__header()
  header.page__header.js-page__header
    block

mixin layout__main()
  main.page__main.js-page__main
    block

mixin layout__footer()
  footer.page__footer
    block

mixin layout__sidebar()
  aside.page__sidebar
    block

mixin layout__container({display, basis, grow, shrink, wrap, direction, align, vertical, mix} = {})
  -
    let classes = ''
    classes += display ? ' page__container_' + display : ''
    classes += basis ? ' page__container_basis-' + basis : ''
    classes += grow ? ' page__container_grow-' + grow : ''
    classes += shrink ? ' page__container_shrink-' + shrink : ''
    classes += wrap ? ' page__container_' + wrap : ''
    classes += direction ? ' page__container_' + direction : ''
    classes += align ? ' page__container_' + align : ''
    classes += vertical ? ' page__container_' + vertical : ''
    classes += mix ? ' ' + mix : ''
  .page__container(class= classes)
    block
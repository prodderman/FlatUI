@import '~global/vars.styl'

.ui-kit
  display: flex
  flex: 1 0 auto;
  text-align center
  background-color white
  padding-top 3rem

  h2
    font-family Lato, sans-serif
    font-size 1.12rem
    letter-spacing 0.09rem
    color $c_black
    font-weight 800
    text-transform uppercase
    flex-basis 100%
    margin-bottom 1.6rem
    
  .search
    margin-bottom 1rem

  &__container
    margin-bottom 3rem
      
  &__row
    justify-content space-between
    align-items flex-end
    margin-bottom 1rem
    
    &:last-child
      margin-bottom 0
  
  & .slider
    flex-basis 45%
    align-self flex-start
  
  &__column
    flex-basis 47%
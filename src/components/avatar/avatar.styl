@import '~global/colors.styl'

.avatar
  width 100%
  height 100%
  border-radius 50%
  border 0.28rem solid $c_lightgray
  overflow hidden
  background-color white

  &__photo
    max-width 100%
    border-radius 50%

  &_for-profile
    width 100%
    height 100%
    text-align center
    border-radius 0
    border none
    background-color white

  &_for-profile &__photo
    object-fit contain
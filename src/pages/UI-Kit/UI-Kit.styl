@import '~global/vars.styl';

body.flat-ui
  background-color: white

.ui-kit
  text-align: center
  padding: 2rem

  h2
    flex-basis: 100%
    margin-bottom: 2rem

  .search
    margin-bottom: 1rem

  &__container
    margin-bottom: 3rem;
  
  &__row
    justify-content: space-between
    align-items: flex-end
    margin-bottom: 1rem
    
    &:last-child
      margin-bottom: 0;
  
  & .slider
    flex-basis: 45%
    align-self: flex-start
  
  &__column
    flex-basis: 48%
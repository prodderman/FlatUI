@import '~global/vars.styl';

:root
  --slider-color: $c_green

.slider 

  &.ui-widget.ui-widget-content
    background-color: $c_lightgray
    border: none
    border-radius: 40px
    height: 6px

    .ui-slider
    
      &-handle
        border-radius: 50%
        border: none
        cursor: move
        outline: none
        top: -.4em;
        background-color: var(--slider-color)

      &:focus
        outline: none

      &-range-min
        background-color: var(--slider-color)
      
      &-tip
        color white
        border: none
        background-color: var(--slider-color)
      
      &-line
        display: none

      &-label
        font-family: Lato, sans-serif
        font-size: 11px
        font-weight: 800
        color $c_lightgray

  &--red
    --slider-color: $c_red
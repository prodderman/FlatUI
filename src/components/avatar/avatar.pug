mixin avatar({img} = {})
  - 
    let src;
    try {
      src=require(`../../img/${img}`);
    } 
    catch(event) {
      src= require(`../../components/avatar/img/user-icon.png`);
    }
    
  .avatar&attributes(attributes)
    img(src=src).avatar__photo


include ../activity/activity
include ../button/button

mixin event({href, alt, img, title, day, month, text} = {})
  +activity({img: img})
    .event
      .event__date
        .event__date-day= day
        .event__date-month= month
      .event__title= title
      .event__text= text
      .event__btn
        +button({small: true, fill: true, text: 'add to calendar'})
@import '~global/colors.styl'

.news
  display flex
  height 13.5rem
  border-radius 0.185rem
  text-decoration none
  overflow hidden
  background-color $c_lightgray

  &__preview-image
    display flex
    flex 3

  &__img
    max-width 100%
    object-fit cover
    object-position center

  &__preview-text
    display flex
    overflow hidden
    flex-direction column
    flex 1 1
    padding 1.2rem
    text-align left
    color white
    background-color $c_red
    align-items stretch
    flex 7

  &__title
    overflow hidden
    flex-shrink 0
    text-overflow ellipsis
    font-family Lato, Arial, sans-serif
    font-size 1.75rem
    line-height @font-size
    font-weight 200

  &__date
    overflow hidden
    flex-shrink 0
    font-size 0.7rem
    text-transform uppercase
    text-overflow ellipsis
    font-family Lato, Arial, sans-serif
    font-weight bold
    margin-top 0.5rem

  &__text
    position relative
    margin-top 0.5rem
    font-family Lato, Arial, sans-serif
    font-size 0.7rem
    overflow hidden
    flex 1 1;
    line-height 0.85rem

    &:after
      content ''
      position absolute
      bottom 0
      height 0.5rem
      width 100%
      display block
      background linear-gradient(180deg, rgba(255,255,255,0), $c_red 100%)
      
      
@import '~global/vars.styl';

.messenger
  display: flex
  flex-direction: column
  align-items: stretch
  width: 17.67rem
  height: 429px
  background-color: #f2f2f2
  border-radius: 6px
  overflow hidden
  z-index: 1111

  &.messenger-resizable
  &.messenger-draggable
    position: fixed
    bottom: 0
    left 0
    box-shadow: 0 0 7px 0 rgba(0,0,0,0.4)

  &__name
    font-family: SourceSansPro, sans-serif
    color: white
    font-size: 2.1rem
    font-weight: 200
    padding: 1.5rem
    overflow: hidden
    text-align: center
    text-overflow: ellipsis
    background-color: $c_green
    cursor: move

  &__avatar
    position: relative
    height: 2.1rem
    background-color: $c_darkgreen

    .avatar
      position: absolute
      left: 0
      right: 0
      top: -50%
      margin: auto
  
  &__body
    display: flex
    flex-direction: column
    padding: 1.5rem
    flex-grow: 1
    font-family: Lato, sans-serif
    font-weight: bold
    align-items: stretch
      
  &__links
    display: flex
    font-size: 1.7rem
    justify-content: space-between
    min-height: 1.5rem
    margin-bottom: 0.5rem

  &__link
    font-size: 1.4rem
    color: $c_gray
    width: 2rem
    text-decoration: none

    &--msg:before
      content: "\f075"
      font-family: FontAwesome

    &--photo:before
      content: "\f030"
      font-family: FontAwesome
  
  &__chat
    flex: 1 1 auto;
    overflow: hidden;
    height: 0
    margin-bottom: 0.5rem

  &__input
    width: 100%
    overflow: auto
    height: auto;
    max-height: 5rem
    padding: 1.1rem;
    border-radius: 6px
    color: $c_gray
    font-size: 0.78rem;
    text-align: left
    border: 3px solid white
    background-color: #e5e5e5
    font-weight: bold
    letter-spacing: 0.03rem;
    margin-bottom: 1rem

  &__btn
    width: 100%

  &__msg-wrap
    display: flex
    padding: 0.5rem 0

    &--out
      justify-content: flex-end

  &__msg
    position: relative
    color: $c_gray
    font-size: 0.78rem;
    padding: 1.1rem;
    text-align: left;
    max-width: 16.67rem;
    letter-spacing: 0.03rem;
    border-radius: 6px
    margin-left: 4px
    margin-right: 4px

    &--in
      background-color: white

      &:before
        content: ""
        position absolute
        right: 100%
        bottom: 20%
        height: 0
        border: 4px solid white
        border-bottom-color: transparent
        border-left-color: transparent
        border-top-color: transparent

    &--out
      color: white
      background-color: $c_green

      &:before
        content: ""
        position absolute
        left: 100%
        bottom: 20%
        height: 0
        border: 4px solid $c_green
        border-bottom-color: transparent
        border-right-color: transparent
        border-top-color: transparent
  
  .mCSB_dragger_bar
    background-color: $c_gray !important

  .mCSB_scrollTools
    opacity 0.5

  .mCSB_scrollTools .mCSB_draggerContainer
    right: -10px
  
  .mCSB_inside>.mCSB_container
    margin-right: 6px

  .mCS-dark.mCSB_scrollTools .mCSB_draggerRail
    background-color: transparent
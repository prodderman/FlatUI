@import '~global/vars.styl'

.carousel
  position relative
  width 100%

  &__wrap
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__pagination
    left 0;
    width 100%;

    & > .swiper-pagination-bullet
      margin 0 0.313rem;

  &__btn
    background none
    width auto
    height auto

    @media screen and (max-width 64rem)
      display none

  &__btn-prev
    left -2.188rem

  &__btn-next
    right -2.188rem
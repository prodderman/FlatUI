@import '~global/colors.styl'

.button
  --main-color: $c_green
  --shadow-color: $c_darkgreen
  position relative
  display block
  font-size 0.75rem
  color var(--main-color)
  border 0.06rem solid var(--main-color)
  background-color white
  border-radius 0.188rem
  padding 0.5rem 2.1rem
  box-shadow 0 0.188rem 0 var(--shadow-color)
  font-weight 800
  text-transform uppercase
  text-align center
  cursor pointer
  overflow hidden
  text-decoration none
  letter-spacing 0.04em
  margin-bottom 0.188rem

  &:focus
    outline none

  &:active
    transform translateY(0.188rem)
    box-shadow 0 0 0 0 var(--shadow-color)

  &:hover
    background-color var(--main-color)
    color white

  &_width_full
    width 100%

  &_color_red
    --main-color: $c_red
    --shadow-color: $c_darkred

  &_size_small
    font-size 0.625rem
    padding 0.3rem 1rem
    box-shadow 0 0.125rem var(--shadow-color)
    margin-bottom 0.125rem
    letter-spacing 0.04em
    
    &:active
      transform translateY(0.125rem)

  &_bg_filled
    color: white
    background-color: var(--main-color) 

  &_is-ripple
    color white
    background-color var(--main-color)
    transition background .4s

  &__ripple
    position absolute
    z-index 1
    width 0
    height 0
    opacity 0
    top: 50%;
    left: 50%;
    transform translate(-50%, -50%)
    border-radius 50%
    background-color rgba(255, 255, 255, 0.50);
  
  &_is-ripple &__ripple
    animation ripple .4s ease-in
    
@keyframes ripple {
  0% {
    opacity 0
  }
  25% {
    opacity 1
  }
  100% {
    width 200%
    padding-bottom 200%
    opacity 0
  }
}

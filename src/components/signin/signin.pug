include ../../components/input/input
include ../../components/button/button
include ../../components/tickbox/tickbox

mixin signin({method = "POST", action = "", enctype} = {})
  form.signin.js-signin(
      data-parsley-validate
      method= method
      action= action
    )
    .signin__field
        +input({name: "email",
            pattern: /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.toString(),
            placeholder: "Your e-mail",
            required: true})
    .signin__field
        +input({type: "password",
            name: "password", 
            placeholder: "Your password",
            required: true})
    .signin__row
      .signin__check
        +tickbox({name: "remember"}) Remember me?
      a.signin__forgot(href= "/mock-address/change-me", data-pjax= true) Forgot password?
    .signin__row
      .signin__btn
        +button({submit: true, text: "Sign In", fullWidth: true})
      .signin__btn  
        +button({href: "stage-info.html", text: "Sign Up", altColor: true, fullWidth: true})(data-pjax= true)
include ../components/layout/layout
include ../components/contacts/contacts
include ../components/header/header
include ../components/sidebar/sidebar
include ../components/mpanel/mpanel
include ../components/menu/menu

- const menuItems =  require('../../global/mocks/menu-items.json');
- let basis = 1100
- let sidebar = true

block variables

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
    link(rel="apple-touch-icon" sizes="180x180" href=require("../../global/favicons/apple-touch-icon.png"))
    link(rel="icon" type="image/png" sizes="32x32" href=require("../../global/favicons/favicon-32x32.png"))
    link(rel="icon" type="image/png" sizes="16x16" href=require("../../global/favicons/favicon-16x16.png"))
    link(rel="manifest" href=require("../../global/favicons/site.webmanifest"))
    link(rel="mask-icon" href=require("../../global/favicons/safari-pinned-tab.svg") color="#5bbad5")
    meta(name="msapplication-TileColor" content="#2d89ef")
    meta(name="theme-color" content="#ffffff")
    script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript")
    title
      block title
  body
    +contacts()
    +mpanel()
    +layout()
      +layout__header()
        +layout__container({basis: basis, align: 'center'})
          +header()

      +layout__main()
        +layout__container({basis: basis, align: 'center'})
          +layout__container({basis: 'auto'})
            block main
          if sidebar
            +layout__sidebar()
              +sidebar()

    block scripts
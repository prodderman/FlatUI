include ../../components/input/input
include ../../components/button/button
include ../../components/tickbox/tickbox

mixin singin({method = "POST", action="", enctype} = {})
  form.singin.js-singin(
      data-parsley-validate
      method=method
      action=action
    )&attributes(attributes)
    .singin__field
        +input({name: "email",
            pattern: /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.toString(),
            placeholder: "Your e-mail",
            required: true})
    .singin__field
        +input({type: "password",
            name: "password", 
            placeholder: "Your password",
            required: true})
    .singin__row
      .singin__check
        +tickbox({name: "remember"}) Remember me?
      a.singin__forgot(href="/mock-address/change-me", data-pjax= true) Forgot password?
    .singin__row
      .singin__btn
        +button({submit: true, text: "Sing In", fullWidth: true})
      .singin__btn  
        +button({href: "stage-info.html", text: "Sing Up", altColor: true, fullWidth: true})(data-pjax= true)
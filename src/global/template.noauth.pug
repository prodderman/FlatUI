include ../components/layout/layout
include ../components/header/header

- let basis = 900
- let vertical = false

block variables

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title
      block title
  body
    +layout()
      +layout__header()
        +layout__container({basis: basis, align: 'center'})
          +header-noauth()

      +layout__main()
        +layout__container({basis: basis, align: 'center', vertical: vertical})
          +layout__container({basis: "auto", vertical: vertical})
            block main

    block scripts
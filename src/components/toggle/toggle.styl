@import '~global/vars.styl';

.toggle

  input[type="checkbox"]
    display: none;

  &__label 
    position relative
    display: block
    width: 60px
    height: 24px
    border-radius: 100px
    background-color: $c_lightgray
    overflow hidden
    cursor: pointer

  &__track
    display: flex
    justify-content: space-between
    align-items: center
    height 100%
    width: 160%
    padding: 0 5px
    transform: translateX(-35px);
    transition: 0.2s

  &__text
    color: white
    width: 35%
    font-size: 12px
    font-weight: 800
    text-transform: uppercase

  &__knob
    width: 18px
    height: 18px
    background-color: white
    border-radius: 50%

  &__field:checked + .toggle__track
    transform: translateX(0);
    background-color: $c_green
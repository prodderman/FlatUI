@import '~global/vars.styl';

.p-profile
  align-items: stretch

  &__name
    position: relative
    padding-bottom: 0.7rem
    margin-bottom: 0.7rem

    &:after
      content: ""
      position: absolute
      width: 100%
      height 2px
      bottom: 0
      left: 0
      background-color: $c_lightgray

  &__profile
    flex-direction: column
    justify-content: flex-start
    align-items: stretch

  &__left-column
    display: flex;
    flex: 0 0 230px;

  &__right-column
    align-items: stretch

  &__profile-row
    flex 0 0 auto
    margin-bottom: 0.4rem

  &__labeled
    font-family: Lato, sans-serif
    font-weight: bold
    color: $c_black
    flex: 1 1 auto
      
  &__label
    font-family: Lato, sans-serif
    font-weight: bold
    color: $c_gray
    text-transform: uppercase
    flex: 0 1 30%

  &__link
    color: $c_green
  
  &__edit
    width: 100%
  
  &__photo
    margin-bottom: 1rem
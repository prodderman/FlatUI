mixin slider({name, altColor, value=0, fill, float, pips, max=100, min=0} = {})

  -  let classes = ''
  -  classes += altColor ? `slider_alt-color` : ''

  .slider.js-slider(class= classes 
                    data-fill= fill
                    data-float= float
                    data-pips= pips
                    data-value= value
                    data-max= max
                    data-min= min)
                    input(type='hidden', name=name, value=value)
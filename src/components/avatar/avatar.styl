@import '~global/colors.styl'

.avatar
  width 100%
  height 100%
  border-radius 50%
  border 0.28rem solid $c_lightgray
  overflow hidden
  background-color white

  &__photo
    max-width 100%
    max-height 100%
    border-radius 50%

  &_for-profile &__photo
    border-radius 0
    object-fit contain

  &_for-profile
    text-align center
    border-radius 0
    border none
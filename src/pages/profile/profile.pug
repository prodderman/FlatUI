extends ../../global/template

include ../../components/calendar/calendar
include ../../components/button/button
include ../../components/avatar/avatar-profile

block variables
  - const pageName = "Profile"

block title
  | My profile

block main
  +layout__container({mix: 'p-profile', wrap: 'wrap', align: 'center'})
    +layout__container({mix: 'page__content', wrap: 'wrap'})
      h1.p-profile__h1 my profile
    +layout__container({mix: 'p-profile__left-column', wrap: 'wrap'})
      +layout__container({mix: 'page__content', wrap: 'wrap'})
        +avatar-profile().p-profile__photo
        +button({altcolor: true, text: "edit"}).p-profile__edit
      +layout__container({mix: 'page__content', wrap: 'wrap'})
        +calendar()
    +layout__container({mix: 'p-profile__right-column', wrap: 'wrap', basis: "auto"})
      +layout__container({mix: 'page__content', wrap: 'wrap', direction: 'column', vertical: "stretch"})
        h2.p-profile__name Ryan Reynolds
        +layout__container({mix: 'p-profile__profile', wrap: "wrap"})
          +layout__container({mix: 'p-profile__profile-row'})
            .p-profile__label profession
            .p-profile__labeled Actor
          +layout__container({mix: 'p-profile__profile-row'})
            .p-profile__label phone
            .p-profile__labeled
              a.p-profile__link(href="tel:8888888888") +78888888888
          +layout__container({mix: 'p-profile__profile-row'})
            .p-profile__label twitter
            .p-profile__labeled
              a.p-profile__link(href="https://twitter.com" target="_blank") https://twitter.com
          +layout__container({mix: 'p-profile__profile-row'})
            .p-profile__label facebook
            .p-profile__labeled
              a.p-profile__link(href="https://facebook.com" target="_blank") https://facebook.com
mixin toggle({name, required, tabindex, mix} = {})
  .toggle(class= mix)
    label.toggle__label
      .toggle__viewport
        input.toggle__field(
          type = "checkbox"
          name = name
          required = required
          tabindex = tabindex
        )&attributes(attributes)
        .toggle__track
          .toggle__text= "on"
          .toggle__knob
          .toggle__text= "off"
      if block
        .toggle__label-text
          block
include ../input/input
include ../button/button
include ../textarea/textarea

mixin feedback-from({method = 'POST', action = '', enctype} = {})
  form.feedback-from.js-feedback-from(
    data-parsley-validate
    method= method
    action= action
    enctype= enctype
  )
    .feedback-from__input
      +input({
        name: 'name',
        placeholder: 'Your Name',
        required: true,
      })
    
    .feedback-from__input
      +input({
        name: 'email',
        type: 'email',
        placeholder: 'Your Email',
        pattern: /^(([^<>()\[\]\\.,;:\s@']+(\.[^<>()\[\]\\.,;:\s@']+)*)|('.+'))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.toString(),
        required: true,
      })

    .feedback-from__textarea
      +textarea({
        name: 'message',
        placeholder: 'Your Message',
        required: true,
      })(data-parsley-errors-messages-disabled)
    .feedback-from__button
      +button({submit: true, text: 'Submit'})
@import '~global/vars.styl'

.sidebar
  position fixed
  width 18.75rem
  display flex
  flex-direction column
  max-height calc(100vh - 5.188rem)
  overflow-y auto

  &__title
    font-family Lato, sans-serif
    font-size 1.12rem
    letter-spacing 0.05rem
    margin 0
    color $c_black
    font-weight 800
    text-transform uppercase

  &__menu
    background-color white
    box-shadow 0 0 0.13rem 0.06rem $c_lightgray
    padding 1rem 0

  &__container
    padding 1rem
    flex 1 1 100%
    background-color white
    box-shadow 0 0 0.13rem 0.06rem $c_lightgray

    & > *:not(:last-child)
      margin-bottom 1rem 

  & > *
    margin-bottom 1.3rem
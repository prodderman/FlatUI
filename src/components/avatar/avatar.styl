@import '~global/vars.styl'

.avatar
  width 5.875rem
  height 5.875rem
  border-radius 50%
  border 0.28rem solid $c_lightgray
  overflow hidden
  background-color white

  &__photo
    max-width 100%
    border-radius 50%

.avatar-profile
  width 100%
  text-align center
  background-color white

  &__photo
    max-width 100%
    height 100%
    object-fit contain
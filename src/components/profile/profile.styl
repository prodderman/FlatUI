@import '~global/colors.styl'
@import '~global/mixins.styl'

.profile
  display flex
  flex-direction column
  justify-content flex-start
  flex-grow 1

  &__header
    page-panel(0 0 auto)

  &__photo
    page-panel(1 1 100%)
    max-height 17rem
  
  &__photo-wrap
    margin-bottom 1rem
    height: 12rem    

  &__title
    font-family Lato, Arial, sans-serif
    font-size 1.5rem
    letter-spacing 0.05rem
    margin 0
    color $c_black
    font-weight 800
    text-transform uppercase

  &__name
    font-family Lato, Arial, sans-serif
    font-size 1.12rem
    text-transform none
    position relative
    padding-bottom 0.7rem
    letter-spacing 0.05rem
    color $c_black
    font-weight 800
    text-transform uppercase

    &:after
      content ''
      position absolute
      width 100%
      height 0.125rem
      bottom 0
      left 0
      background-color $c_lightgray

  &__info
    position relative
    padding-top 0.7rem
    padding-bottom 0.7rem

    &:after
      content ''
      position absolute
      width 100%
      height 0.125rem
      bottom 0
      left 0
      background-color $c_lightgray

  &__skills
    padding-top 0.7rem
    padding-bottom 0.7rem

  &__piechart
    width 45%
    min-width 12.5rem

  &__main
    display flex

    @media screen and (max-width 640px)
      flex-wrap wrap

  &__left-col
    display flex
    flex-direction column
    flex 0 0 14.38rem

    @media screen and (max-width 640px)
      flex 1 1 100%

  &__calendar
    page-panel(1 1 100%)
    @media screen and (max-width 640px)
      display none

  &__right-col
    display: flex
    flex 1 1 auto

  &__content
    page-panel(1 1 100%)

  &__row
    display flex
    flex 0 0 auto
    margin-bottom 0.4rem

  &__labeled
    font-family Lato, Arial, sans-serif
    font-weight bold
    color $c_black
    flex 1 1 auto
      
  &__label
    font-family Lato, Arial, sans-serif
    font-weight bold
    color $c_gray
    text-transform uppercase
    flex 0 1 7.5rem

  &__link
    color $c_green
  
  &__edit
    width 100%

@import '~global/vars.styl';

.mpanel 
  display: none
  position: fixed
  top: 0
  bottom: 0
  right: 0
  z-index: 0
  padding: 1rem 
  width: 300px
  background-color: white
  box-shadow: 0 0 2px 1px $c_lightgray
  -webkit-overflow-scrolling: touch
  min-height: 100vh
  overflow-y: auto

  @media screen and (min-width: 1024px)
    display: flex

.slideout-panel
  position: relative
  z-index: 1
  will-change: transform

.slideout-open,
.slideout-open body,
.slideout-open .slideout-panel
  overflow: hidden

.slideout-open .slideout-menu
  display: flex
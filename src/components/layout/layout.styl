@import '~global/vars.styl'

.page
  display: flex
  flex-direction: column
  min-height: 100%

  &__header 
    position: fixed
    top: 0
    left 0 
    right: 0
    display: flex
    flex: 1 0 auto
    background-color: $c_green
    z-index 1111

  &__main
    display: flex
    flex: 1 0 auto
    margin-top: 67px
    margin-bottom: 1rem

  &__content
    padding: 1rem 
    background-color: white
    box-shadow: 0 0 2px 1px $c_lightgray
    margin: 0 0.65rem
    margin-top: 1.3rem

  &__sidebar
    display: flex
    flex 0 0 300px
    margin: 0 0.65rem;
    margin-top: 1.3rem

  &__container
    display: flex
    flex: 1 1 100%
    align-items: flex-start
    justify-content: space-between;

    for $i in (1..30)
      $basis = $i * 50

      &--basis-{$basis}.page__container 
        flex-basis: $basis px

    for $grow in (0..10)
      &--grow-{$grow}
        flex-grow: $grow

    for $shrink in (0..10)
      &--shrink-{$shrink}
        flex-shrink: $shrink

    &--block
      display: block

    &--left
      flex-basis: 48%;
      flex-grow: 0
      margin-right: auto

    &--right
      flex-basis: 48%;
      flex-grow: 0
      margin-left: auto

    &--center
      flex-grow: 0
      margin-right: auto
      margin-left: auto

    &--middle
      align-items: center
    
    &--stretch
      align-items: stretch

    &--column 
      flex-direction: column

      & > .page__container
        flex-basis: auto

    &--column-reverse
      flex-direction: column-reverse

      & > .page__container
        flex-basis: auto

    &--row-reverse
      flex-direction: row-reverse

    &--wrap
      flex-wrap: wrap

    &--wrap-reverse
      flex-wrap: wrap-reverse

    &--basis-auto.page__container
      flex: 1 1 auto
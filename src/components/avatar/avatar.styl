@import '~global/vars.styl'

.avatar
  width 94px
  height 94px
  border-radius 50%
  border 4.5px solid $c_lightgray
  overflow hidden
  background-color white

  &__photo
    max-width 100%
    border-radius 50%

.avatar-profile
  width 100%
  text-align center
  background-color white

  &__photo
    max-width 100%
    height 100%
    object-fit contain
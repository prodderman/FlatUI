mixin map({coord, address} = {})
  .map.js-map(data-coord= coord)
    .map__location.js-map__location
    .map__overlay
      .map__text Meet us!
      .map__address!= address 
      .map__controls
        button.map__button.map__button_my-location.js-map__button_my-location //- убрать модификаторы
          include ./img/crosshair.svg
        button.map__button.map__button_to-marker.js-map__button_to-marker
          include ./img/marker.svg
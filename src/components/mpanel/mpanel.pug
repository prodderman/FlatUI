include ../menu/menu
include ../avatar/avatar
include ../calendar/calendar

mixin mpanel()
  .mpanel.js-mpanel
    .mpanel__user
      a.mpanel__link.mpanel__link_logout(href="authorization.html") Log out
      a.mpanel__link.mpanel__link_profile(href="profile.html" data-pjax)
        .mpanel__avatar
          +avatar()
        .mpanel__name  Ryan Reynolds
    .mpanel__menu
      +menu()
    +calendar()
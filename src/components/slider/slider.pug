mixin slider({mix='', name, color, value=0, fill, float, pips, max=100, min=0} = {})

  -  let classes = mix
  -  classes += color ? `slider_red` : ''
  -  classes += fill ? ` slider_fill` : ''
  -  classes += float ? ` slider_float` : ''
  -  classes += pips ? ` slider_pips` : ''

  .slider.js-slider(class= classes 
                    data-value= value
                    data-max= max
                    data-min= min)&attributes(attributes)
                    input(type='hidden', name=name, value=value)
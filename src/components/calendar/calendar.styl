@import '~global/colors.styl'

.calendar 
  background-color $c_red
  border-radius 0.2rem
  text-align center
  overflow hidden;
  max-width 17.44rem
  min-width 15.625rem

  &__today
    font-family Lato, Arial, sans-serif
    font-size 5rem
    font-weight 200
    color $c_white
    padding-top 0.21em
    padding-right 0.4rem
    letter-spacing -0.04em

  .ui-datepicker
    width 100%
    padding 0
    border 0
    border-radius 0

    table
      margin 0

    .ui-datepicker-buttonpane
      border none 
      margin 0
      padding 0
      background-color $c_lightgray
      text-align left

      .ui-datepicker-current
        font-family Lato, Arial, sans-serif
        background-color transparent
        font-size 0.83rem
        font-weight 800
        line-height 1.3rem
        text-transform uppercase
        letter-spacing 0.06em
        margin 0.9em 1em

    .ui-datepicker-header
      padding 0
    
    .ui-datepicker-title
      font-family Lato, Arial, sans-serif
      font-size 1.5rem
      color $c_white
      font-weight 200
      letter-spacing: -0.036em;

    .ui-datepicker-buttonpane button.ui-datepicker-current
      float none

    .ui-corner-all
      border none
      border-radius 0

    .ui-datepicker-year
      display none
  
    .ui-datepicker-header 
      background-color $c_darkenred

    .ui-datepicker-prev
      font-size: 1.6rem;
      cursor pointer
      left 0
      top 0

      .ui-icon 
        display none

      &:before
        position absolute
        content '\F104'
        display block
        font-family FontAwesome
        color $c_white
        right 50%;
        top 50%;
        margin-top -0.93rem

      &.ui-datepicker-prev-hover
        background initial

    .ui-datepicker-next
      font-size: 1.6rem;
      cursor pointer
      right 0.12rem
      top 0

      .ui-icon 
        display none

      &:before
        position absolute
        content '\F105';
        display block;
        font-family FontAwesome;
        color $c_white;
        left 50%;
        top 50%
        margin-top -0.93rem

      &.ui-datepicker-next-hover
        background initial

  .ui-datepicker-calendar

    thead
      background-color $c_red

      th
        font-family Lato, Arial, sans-serif
        font-size 0.53rem
        letter-spacing 0.11em
        color $c_white
        padding-top 1.5em
        line-height 0.6rem
    
    tbody

      td 
        padding 0
        border 0.1em solid $c_white
        opacity 1

        .ui-state-default 
          font-family SourceSansPro, Arial, sans-serif
          font-size 1.25rem
          color $c_gray
          text-align center
          border none
          opacity 1
          background-color $c_lightengray
          height 1.97em
          line-height 1.6em

        .ui-state-highlight
          color $c_red

        .ui-state-active
          color $c_white
          background-color $c_red
        
        &.ui-datepicker-other-month 
          .ui-state-default
            color $c_white
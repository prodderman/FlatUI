mixin percentage(percent)
  if !percent
    - percent = 0
  section.percentage.js-percentage(data-percent= percent)&attributes(attributes)
    svg(viewBox="0 0 100 100")
      text.percentage__number(text-anchor= "middle"
                                      alignment-baseline= "central" 
                                      x=50 
                                      y= 50)= 0
      circle.percentage__circle(fill="none" 
                                        cx="50" 
                                        cy="50" 
                                        r="47.5" 
                                        stroke="black"
                                        stroke-dasharray= 6.28*48
                                        stroke-width= "5px"
                                        stroke-dashoffset= 6.28*48)
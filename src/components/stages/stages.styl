@import '~global/vars.styl';

.stages
  position relative
  display: flex
  justify-content: space-between
  width: 100%
  text-align: center
  list-style: none

  &:before
    content: ""
    position: absolute
    width: 97%
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto
    display: block
    background-color: $c_lightgray
    height: 4px
    z-index -1

  &__item
    position: relative
    width: 100%

    &:last-child
      width: 29px

    &:before
      content: attr(data-stage)
      display: block
      font-size: 14px
      font-weight: 800
      color $c_gray
      line-height: 29px;
      width: 29px
      height 29px
      background-color: $c_lightgray
      border-radius: 50%
      z-index 11

    &--visit

      &:before
        background-color: $c_red
        color: white
      
      &:after
        content: ""
        position: absolute
        left 14px
        top 0
        bottom 0
        margin: auto
        z-index: -1
        background-color: $c_red
        width: 100%
        height: 4px
    
    &--current

      &:before
        background-color: $c_red
        color: white
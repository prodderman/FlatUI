mixin toggle({name, required, tabindex} = {})
  .toggle
    label.toggle__label
      .toggle__viewport
        input.toggle__field(
          type = 'checkbox'
          name = name
          required = required
          tabindex = tabindex
        )
        .toggle__track
          .toggle__text= 'on'
          .toggle__knob
          .toggle__text= 'off'
      if block
        .toggle__label-text
          block
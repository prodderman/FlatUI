@import '~global/vars.styl';

.carousel
  position: relative
  width: 100%

  &__wrap
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

  &__pagination
    left: 0;
    width: 100%;

    & > *
      margin: 0 5px;

  &__btn
    background: none
    width: auto
    height: auto

  &__btn-prev
    left -35px

  &__btn-next
    right -35px
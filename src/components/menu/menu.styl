@import '~global/vars.styl';

.menu

  &__items
    display: flex
    flex-direction: column
    list-style: none

  &__items-link
    display: block
    font-family: Lato, sans-serif
    font-size: 1.12rem
    font-weight: bold
    text-decoration: none
    text-transform: uppercase
    color $c_black
    padding: 0.5rem 1rem

    &.menu__items-link--active
      color: $c_red

    &:hover
      color: white
      background-color: $c_red
  
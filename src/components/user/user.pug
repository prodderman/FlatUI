include ../avatar/avatar

mixin user({id, img, alt=false, social={}, name='user name', profession='profession', href='/mock-address/change-me'} = {})
  .user.js-user(class= alt ? 'user_alt' : false id = id !== undefined ? `user_${id}` : false)
    a.user__link.js-user__link(href= href)
      +avatar({img: img})
    .user__info.js-user__info
      .user__name= name
      .user__profession= profession
      .user__contact
        if social.fb
          a.user__social.user__social_link.user__social_fb(href= social.fb target='_blank')
        else
          .user__social.user__social_fb
        if social.tw
          a.user__social.user__social_link.user__social_tw(href= social.tw target='_blank')
        else
          .user__social.user__social_tw
        if social.dr
          a.user__social.user__social_link.user__social_dr(href= social.dr target='_blank')
        else
          .user__social.user__social_dr
@import '~global/vars.styl';

.menu

  &__items
    display: flex
    flex-direction: column
    list-style: none
  
  &__item
    padding: 0.2rem 0
    
    &:not(:last-child)
      margin-bottom: 0.5rem
    
    &:hover
      background-color: $c_lightengray

  &__items-link
    display: block
    font-family: Lato, sans-serif
    font-size: 1.12rem
    font-weight: bold
    text-decoration: none
    text-transform: uppercase
    color $c_black

    &.menu__items-link--active
      color: $c_green
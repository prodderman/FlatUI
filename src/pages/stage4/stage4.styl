@import '~global/vars.styl';



.stage4
  flex: 1
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  
  &__h2
    text-align: center
    margin-bottom: 1.3rem
  
  &__column
    flex: 0 0 48%
    margin-bottom: 2.5rem

    & > *:not(:last-child)
      margin-bottom: 1rem

  &__toggle
    display: flex
    align-items: center

  &__footer
    flex: 1 1 100%
    display: flex
    justify-content: space-between
    align-items: center

  &__diagram
    display: flex
    align-items: center

  &__label-diagram
    font-family: Lato, sans-serif
    font-size: 1.5rem
    font-weight: bold
    text-transform: uppercase
    color: $c_black
    margin-left: 1.5rem

  &__btns
    display: flex
    align-items: center

  &__prev
    text-align: left

  &__next
    text-align: right
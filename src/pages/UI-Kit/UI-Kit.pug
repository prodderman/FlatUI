include ../../components/layout/layout
include ../../components/button/button
include ../../components/arrow/arrow
include ../../components/percentage/percentage
include ../../components/piechart/piechart
include ../../components/stages/stages
include ../../components/slider/slider
include ../../components/form/form
include ../../components/calendar/calendar
include ../../components/video/video
include ../../components/input/input
include ../../components/toggle/toggle
include ../../components/tickbox/tickbox
include ../../components/search/search
include ../../components/select/select

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title UI-Kit
  body
    +layout("ui-kit")
      +layout__container("small")
        .section.buttons
          h2 standard&ensp;buttons
          .buttons__container
            .buttons__row
              +button({size: 'small'})
              +button()
              +button({color: 'red'})
              +button({color: "red", size: 'small'})
            .buttons__row
              +button({size: 'small', fill: 'transparent'}) 
              +button({fill: 'transparent'})
              +button({color: 'red', fill: 'transparent'})
              +button({color: "red", size: 'small', fill: 'transparent'})
        .section.arrows
          h2 ARROW&ensp;BUTTONS
          .section__container
            +arrow()
            +arrow({direction: "right"})
            +arrow({disabled: true})
            +arrow({disabled: true, direction: "right"})
            +arrow({fill: true})
            +arrow({fill: true, direction: "right"})
        .section.percentages
          h2 PERCENTAGES / PIE CHART
          .section__container
            .percentages-wrap
              +percentage({percent: 0})
            .percentages-wrap
              +percentage({percent: 38})
            .percentages-wrap
              +percentage({percent: 62})
            .percentages-wrap
              +percentage({percent: 89})
            .percentages-wrap
              +piechart([{name: "Chrome", count: 2000, color: "#4eb7a8"},
                         {name: "Yandex", count: 1000, color: "#e75735"},
                         {name: "Firefox", count: 300, color: "#e5e5e5"},
                         {name: "Edge", count: 400, color: "#4f4f4f"}])
        .section.sliders
          h2 sliders
          .section__container
            .section__container-half
              +slider({float: true, value: 40, color: "red"})
            .section__container-half
              +slider({pips: true, fill: true, float: true})
        .section.stage
          h2 stages
          +stages({count: 5, current: 3})
        .section.form-elemnts
          h2 form&ensp;elements
          .section__container
            .section__container-half
              +form()
            .section__container-half
              .section.toggles-node
                h2  toggles
                .section__container
                  +toggle()
                  +toggle()(checked)
              .section.tick-boxes-node
                h2 tick-boxes
                .section__container
                  +tickbox()(checked)
                  +tickbox()
        .section
          .section__container
            .section__container-half
              .section.search-dropdown
                h2 SEARCH / DROP DOWN
                .section__container
                  +search({method: "GET"})
                  +select({options: {
                    1: "Option 1",
                    2: "Option 2",
                    3: "Option 3"
                  }})
            .section__container-half
              .section.user-profile
                h2 user&ensp;profile

        .section.news-events-node
          h2 NEWS & EVENTS
          .section__container
            .section__container-half
            .section__container-half
        .section.location
          h2  location
        .section
          .section__container
            .section__container-half
              .section.calendar-node
                h2 calendar
                +calendar()
            .section__container-half
              .section.messaging-node
                h2 messaging
        .section.video
          h2 video
          +video({src: "//vk.com/video_ext.php?oid=-122784028&id=456239475&hash=fbe58f5547e304cd"})
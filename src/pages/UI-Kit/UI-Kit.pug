include ../../components/layout/layout
include ../../components/button/button
include ../../components/arrow/arrow
include ../../components/percentage/percentage

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title UI-Kit
  body
    +layout()
      +layout__container("small")
        section.buttons
          h2 standard&ensp;buttons
          .buttons__container
            .buttons__row
              +button({size: 'small', text: "Button"})
              +button({text: "Button"})
              +button({color: 'red', text: "Button"})
              +button({color: "red", size: 'small', text: "Button"})
            .buttons__row
              +button({size: 'small', fill: 'transparent', text: "Button"}) 
              +button({fill: 'transparent', text: "Button"})
              +button({color: 'red', fill: 'transparent', text: "Button"})
              +button({color: "red", size: 'small', fill: 'transparent', text: "Button"})
        section.arrows
          h2 ARROW&ensp;BUTTONS
          .arrows__container
            +arrow()
            +arrow({direction: "right"})
            +arrow({disabled: true})
            +arrow({disabled: true, direction: "right"})
            +arrow({fill: true})
            +arrow({fill: true, direction: "right"})
        section.percentages
          h2 PERCENTAGES / PIE CHART
          .percentages__container
            .percentages-wrap
              +percentage(0)
            .percentages-wrap
              +percentage(38)
            .percentages-wrap
              +percentage(62)
            .percentages-wrap
              +percentage(89)
        section.sliders
          h2 sliders
        section.stages
          h2 stages
        section.form-elemnts
          h2 form&ensp;elements
        section.toggles
          h2  toggles
        section.tick-boxes
          h2 tick-boxes
        section.search-dropdown
          h2 SEARCH / DROP DOWN
        section.user-profile
          h2 user&ensp;profile
        section.news-events
          h2 NEWS & EVENTS
        section.location
          h2  location
        section.calendar
          h2 calendar
        section.messaging
          h2  messaging
        section.video
          h2 video
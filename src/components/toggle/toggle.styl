@import '~global/vars.styl'

.toggle

  input[type='checkbox']
    display none

  &__label 
    display flex
    justify-content flex-start
    align-items center
    cursor pointer
    min-height 1.75rem

  &__viewport
    position relative
    display block
    width 3.75rem
    height 1.5rem
    border-radius 6.25rem
    background-color $c_lightgray
    overflow hidden
    cursor pointer

  &__track
    display flex
    justify-content space-between
    align-items center
    height 100%
    width 160%
    padding 0 0.313rem
    transform translateX(-2.188rem)
    transition 0.2s

  &__text
    color white
    width 35%
    font-size 0.75rem
    font-weight 800
    text-align center
    text-transform uppercase

  &__knob
    width 1.125rem
    height 1.125rem
    background-color white
    border-radius 50%

  &__field:checked + .toggle__track
    transform translateX(0)
    background-color $c_green

  &__label-text
    font-family SourceSansPro, sans-serif
    color $c_black
    margin-left 0.5rem
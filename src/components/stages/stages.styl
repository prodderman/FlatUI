@import '~global/vars.styl'

.stages
  position relative
  display flex
  justify-content space-between
  width 100%
  text-align center
  list-style none

  &:before
    content ''
    position absolute
    width 97%
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    display block
    background-color $c_lightgray
    height 0.25rem

  &__item
    position relative
    width 100%
    z-index 1

    &:last-child
      width 1.813rem

    &:before
      content attr(data-stage)
      display block
      font-size 0.875rem
      font-weight 800
      color $c_gray
      line-height 1.813rem
      width 1.813rem
      height 1.813rem
      background-color $c_lightgray
      border-radius 50%
      z-index 1

    &_visit

      &:before
        background-color $c_red
        color white
      
      &:after
        content ''
        position absolute
        left 0.875rem
        top 0
        bottom 0
        margin auto
        z-index -1
        background-color $c_red
        width 100%
        height 0.25rem
    
    &_current

      &:before
        background-color $c_red
        color white
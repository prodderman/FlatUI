@import '~global/vars.styl';

.header
  display: flex
  flex: 1 0 auto
  padding: 0.5rem 0
  align-items: stretch
  height 67px

  & > *
    margin: 0 0.5rem

  &__logo-link
    display block
    width: 60px

  &__logo-img
    max-width: 100%

  &__search-wrap
    display: flex
    align-items: center
    width: 300px

  &__content
    display: flex
    flex-direction: row-reverse
    align-items: center
    justify-content: flex-start
    flex: 1 1 auto
    
    & > a
      font-family: Lato, sans-serif
      font-weight: bold
      display: flex
      align-items: center
      color white
      transition: 0.2s

      &:hover
        color: $c_red

  &__logout
    margin-right: 1rem

  &__profile-link
    display: flex
    flex-direction: row-reverse

  &__name
    margin-right: 0.9rem

  &__avatar
    width: 50px
    height: 50px
* 
  box-sizing: border-box
  outline: none
  margin: 0
  padding: 0

html
  height 100%
 
body
  font-family: Lato, sans-serif
  font-size 16px
  //overflow-x: hidden

h1
  font-family: Lato, sans-serif
  font-size: 1.5rem
  letter-spacing: 1px
  margin: 0
  color: $c_black
  font-weight: 800
  text-transform: uppercase

h2 
  font-family: Lato, sans-serif
  font-size: 1.12rem
  letter-spacing: 1px
  margin: 0
  color: $c_black
  font-weight: 800
  text-transform: uppercase

button
  border: none 
  cursor: pointer

a[class]
  text-decoration: none

ul:not([class])
  list-style: none